---
import Layout from "../layouts/Layout.astro";


---

<Layout title="Carrito" description="Tienda de instrumentos musicales, cursos, blog de musica, guitarras">
	<main class="contenedor">
        <h1 class="heading">Carrito de compras</h1>

        <div class="contenido">
          <div class="carrito">
            <h2>Articulos</h2>

          </div>

          <aside class="resumen">
            <h3>Resumen del pedido</h3>
            <p>Total a pagar: $</p>
          </aside>
        </div>
      </main>
</Layout>

<style>
    .contenido{
        display: grid;
        align-items: flex-start;
        gap: 5rem;
    }
    @media (min-width: 768px){
        .contenido{
            grid-template-columns: 3fr 2fr;
        }
    }
    .carrito{
        padding: 3rem;
    }
    .producto {
        display: grid;
        /* para tener habilitada el atriuto de abajo tiene que ser display grid. luego el atributo de abajo es para colocar las cosas una al lado del otro */
        grid-template-columns: 1fr 3fr;
        gap: 4rem;
        align-items: center;
        padding: 3rem 0;
        border-bottom: 1px solid #cfcfcf;
        position: relative;
    }
    .producto:last-of-type{
        border-bottom: none;
    }
    .select{
        all: unset;
        border: 1px solid #cfcfcf;
        text-align: center;
        width: 100%;
        padding: .5rem;
        border-radius: 1rem;
    }
    .producto p{
        margin: 0 0 1rem 0;
    }
    .producto span{
        font-weight: 900;
        font-size: 3.2rem;
    }
    .nombre {
        font-weight: 700;
        font-size: 4.2rem;
    }
    .producto .precio {
        margin-top: 2rem;
        font-weight: 700;
        color: var(--primary);
    }
    .subtotal{
        font-size: 2.2rem;
    }

    .resumen{
        background-color: #f9fafb;
        padding: 3rem;
        border-radius: 1rem;
        /* lo de abajo es para que se mantenaga fija en esa posici√≥n */
        position: sticky;
        top: 3rem;
    }
    .btn_eliminar{
        all: unset;
        position: absolute;
        top: 3rem;
        right: 1rem;
    }
    .btn_eliminar:hover{
        cursor: pointer;
    }

</style>